let arr_info = [100,2003,200,031];
let discount = 0.5;
for(let i = 0 ; i < arr_info.length; i++){
let discount_value = arr_info[i] - (arr_info[i] * discount);
	arr_info[i] = discount_value;
}
console.log(arr_info);

